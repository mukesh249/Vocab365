<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    android:id="@+id/data_outer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    bind:cardBackgroundColor="@android:color/transparent"
    bind:cardCornerRadius="0.0dip"
    bind:cardElevation="0.0dip">

    <LinearLayout
        android:id="@+id/qus_quiz_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_5sdp">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/small_gray_outline_circle"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="4"
            android:singleLine="true"
            android:text="@string/a"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/_5sdp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="Answered"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_8sdp"
            android:textColor="@color/vocab_text"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>
</android.support.v7.widget.CardView>