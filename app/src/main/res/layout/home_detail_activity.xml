<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_home"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scroll"
        android:layout_above="@id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_back"
                    android:padding="@dimen/_3sdp"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/back_icon" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="The Hindu"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:id="@+id/img_bookmark"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:src="@drawable/bookmark_on" />

                    <ImageView
                        android:id="@+id/img_share"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:src="@drawable/share_off" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView
                app:cardUseCompatPadding="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/news_boook_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_160sdp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/logo" />

                    <LinearLayout
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">
                        <TextView
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_7sdp"
                            android:id="@+id/title_home_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"
                            android:text="Darjeeling Deadlock : On elusive Pease"
                            android:textSize="@dimen/_13sdp" />

                        <TextView
                            android:id="@+id/discription"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Darjeeling Deadlock : On elusive Pease"
                            android:textSize="@dimen/_11sdp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/watch_now"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/back_quiz_start"
                        android:gravity="center"
                        android:paddingBottom="@dimen/_10sdp"
                        android:paddingLeft="@dimen/_35sdp"
                        android:paddingRight="@dimen/_35sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:tag="binding_7"
                        android:text="watch now"
                        android:textAllCaps="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        android:visibility="gone"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_margin="@dimen/_3sdp"
        android:id="@+id/bottom"
        android:background="@drawable/round_btn_white"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_5sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="bottom"
            android:padding="@dimen/_11sdp"
            android:text="tap any word for meaning"
            android:singleLine="true"
            android:layout_toEndOf="@+id/speek_btn"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_15sdp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_centerVertical="true"
            android:id="@+id/text_tranlator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp" />
        <Button
            android:id="@+id/speek_btn"
            android:background="@drawable/ic_volume"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_margin="@dimen/_5sdp"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp" />
    </RelativeLayout>

</RelativeLayout>