<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical"
    tools:context=".activities.FeedbackActivity">
    <ImageView
        android:id="@+id/ratenow_close"
        android:layout_gravity="end"
        android:src="@drawable/ic_close_black"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/round_with_border"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_80sdp" />
    <TextView
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="You Loved Vocab365?"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_20sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:text="Rate us 5 Stars on Play Store if you enjoy learning with us!"
        android:textSize="@dimen/_12sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RatingBar
        android:id="@+id/ratingbar"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="1.0"
        android:rating="5"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:text="Rate Now"
        android:textColor="@color/white"
        android:id="@+id/rate_now_btn"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@color/colorPrimaryDark"
        android:textAllCaps="true"
        android:layout_gravity="center"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_30sdp" />
</LinearLayout>