    </style>
    <style name="TextAppearance.MaterialCalendarWidget.Week" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12.0sp</item>
    </style>
    <style name="TextAppearance.MaterialCalendarWidget.WeekDay" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12.0sp</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
